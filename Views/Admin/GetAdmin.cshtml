@model WhisperLeaderboard.Models.Dto.EditDto
@using WhisperLeaderboard.Models;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin leaderboard</title>
</head>
<body>

<div>
    <h4>Leaderboard</h4>
    <hr />
</div>
<table>
    <tr>
        <td> Position </td>
        <td> Demandeur </td>
        <td> Agent </td>
        <td> Pointage </td>
    </tr>
    @{
        List<Entry> entries = ViewBag.Entries;
        @for (int i = 0; i < entries.Count; i++)
        {
    <tr>
        @using (Html.BeginForm("update", "admin", FormMethod.Post))
        {
            <td> @(i + 1) </td>
            @Html.Hidden("Position", i + 1)
            <td> @Html.TextBox("Name1", entries[i].Name1) </td>
            <td> @Html.TextBox("Name2", entries[i].Name2) </td>
            <td> @Html.TextBox("Score", entries[i].Score) </td>
            <td> <input type="submit" value="Update" /></td>

        }

        @using (Html.BeginForm("delete", "admin"))
        {
            @Html.Hidden("Position", i + 1)
            <td> <input type="submit" value="Delete" /></td>
        }
    </tr>
        }
        }
</table>
</body>
</html>
